---
import Layout from './Layout.astro';
import { useTranslations, getLocalizedPath } from '../i18n/translations';
import { getCollection } from 'astro:content';

interface Props {
  title: string;
  description: string;
  publishedDate: Date;
  updatedDate?: Date;
  originalUrl?: string;
  originalPlatform?: 'medium' | 'devto' | 'self';
  tags: string[];
  lang: 'en' | 'es' | 'cat';
  slug: string;
}

const { title, description, publishedDate, updatedDate, originalUrl, originalPlatform, tags, lang, slug } = Astro.props;
const t = useTranslations(lang);

// Get available translations for this article
const allArticles = await getCollection('articles');
const availableTranslations = allArticles
  .filter(article => article.slug.split('/')[1] === slug.split('/')[1])
  .map(article => article.slug.split('/')[0]);

const formatDate = (date: Date) => {
  return date.toLocaleDateString(lang === 'cat' ? 'ca-ES' : lang === 'es' ? 'es-ES' : 'en-GB', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

const platformLabels = {
  medium: 'Medium',
  devto: 'Dev.to',
  self: t('article.originallyPublished')
};
---

<Layout title={title} lang={lang}>
  {originalUrl && <link rel="canonical" href={originalUrl} slot="head" />}

  <article class="article">
    <div class="container">
      <header class="article-header">
        <div class="article-meta">
          <time datetime={publishedDate.toISOString()}>{formatDate(publishedDate)}</time>
          {updatedDate && (
            <span class="updated">
              · {t('article.updated')} {formatDate(updatedDate)}
            </span>
          )}
        </div>

        <h1 class="article-title">{title}</h1>
        <p class="article-description">{description}</p>

        {tags.length > 0 && (
          <div class="article-tags">
            {tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}

        {availableTranslations.length > 1 && (
          <div class="language-versions">
            <span class="language-label">{t('article.availableIn')}:</span>
            {availableTranslations.map(locale => (
              <a
                href={getLocalizedPath(`/articles/${slug.split('/')[1]}`, locale)}
                class:list={['language-link', { active: locale === lang }]}
              >
                {locale.toUpperCase()}
              </a>
            ))}
          </div>
        )}
      </header>

      <div class="article-content">
        <slot />
      </div>

      <footer class="article-footer">
        {originalUrl && originalPlatform && (
          <div class="original-source">
            <span>{t('article.originallyOn')} </span>
            <a href={originalUrl} target="_blank" rel="noopener noreferrer">
              {platformLabels[originalPlatform]} →
            </a>
          </div>
        )}

        <a href={getLocalizedPath('/writing', lang)} class="back-link">
          ← {t('article.backToWriting')}
        </a>
      </footer>
    </div>
  </article>
</Layout>

<style>
  .article {
    padding: var(--space-2xl) 0;
  }

  .article-header {
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-xl);
    border-bottom: 1px solid var(--color-border);
  }

  .article-meta {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-md);
  }

  .article-title {
    font-size: 2.5rem;
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: var(--space-md);
  }

  .article-description {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-lg);
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-bottom: var(--space-lg);
  }

  .language-versions {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background: var(--color-bg-secondary);
    border-radius: 0.5rem;
    width: fit-content;
  }

  .language-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .language-link {
    font-size: 0.75rem;
    font-weight: 600;
    padding: var(--space-xs) var(--space-sm);
    border-radius: 0.25rem;
    text-decoration: none;
    color: var(--color-text-muted);
    transition: all 0.2s ease;
  }

  .language-link:hover {
    color: var(--color-accent);
  }

  .language-link.active {
    background: var(--color-accent);
    color: white;
  }

  .article-content {
    font-size: 1.125rem;
    line-height: 1.8;
  }

  .article-content :global(h2) {
    font-size: 1.75rem;
    font-weight: 700;
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-md);
  }

  .article-content :global(h3) {
    font-size: 1.375rem;
    font-weight: 600;
    margin-top: var(--space-xl);
    margin-bottom: var(--space-sm);
  }

  .article-content :global(p) {
    margin-bottom: var(--space-md);
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .article-content :global(li) {
    margin-bottom: var(--space-xs);
  }

  .article-content :global(code) {
    background: var(--color-bg-secondary);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }

  .article-content :global(pre) {
    background: var(--color-bg-secondary);
    padding: var(--space-md);
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: var(--space-md);
  }

  .article-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .article-content :global(blockquote) {
    border-left: 4px solid var(--color-accent);
    padding-left: var(--space-md);
    margin: var(--space-lg) 0;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .article-content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .article-content :global(a:hover) {
    text-decoration: none;
  }

  .article-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: var(--space-lg) 0;
  }

  .article-footer {
    margin-top: var(--space-2xl);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .original-source {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .original-source a {
    color: var(--color-accent);
    text-decoration: none;
  }

  .original-source a:hover {
    text-decoration: underline;
  }

  .back-link {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.875rem;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .article-title {
      font-size: 2rem;
    }

    .article-description {
      font-size: 1.125rem;
    }
  }
</style>
