---
interface Props {
  title: string;
  description: string;
  url: string;
  platform: 'medium' | 'devto';
  date?: string;
}

const { title, description, url, platform, date } = Astro.props;

const platformLabels = {
  medium: 'Medium',
  devto: 'Dev.to'
};
---

<article class="writing-card card">
  <span class="writing-platform">{platformLabels[platform]}</span>
  <h3 class="writing-title">
    <a href={url} target="_blank" rel="noopener noreferrer">
      {title}
    </a>
  </h3>
  <p class="writing-description">{description}</p>
  {date && <time class="writing-date">{date}</time>}
  <a href={url} class="writing-link" target="_blank" rel="noopener noreferrer">
    Read Article â†’
  </a>
</article>

<style>
  .writing-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .writing-platform {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-accent);
  }

  .writing-title {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
  }

  .writing-title a {
    color: var(--color-text);
    transition: color 0.2s ease;
  }

  .writing-title a:hover {
    color: var(--color-accent);
  }

  .writing-description {
    color: var(--color-text-muted);
    flex-grow: 1;
    font-size: 0.95rem;
  }

  .writing-date {
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  .writing-link {
    font-size: 0.875rem;
    font-weight: 500;
    margin-top: var(--space-sm);
  }
</style>
