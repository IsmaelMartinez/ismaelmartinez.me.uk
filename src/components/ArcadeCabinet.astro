---
interface Props {
  id: string;
  title: string;
  description: string;
  href: string;
  color: string;
  icon: string;
}

const { id: _id, title, description, href, color, icon } = Astro.props;
---

<a href={href} class="arcade-cabinet" style={`--cabinet-color: ${color}; --cabinet-glow: ${color}40;`}>
  <div class="cabinet-top">
    <div class="cabinet-marquee">
      <span class="marquee-text">{title}</span>
    </div>
  </div>

  <div class="cabinet-screen">
    <div class="screen-bezel">
      <div class="screen-content">
        <div class="screen-scanlines"></div>
        <div class="screen-icon">{icon}</div>
        <div class="screen-text">
          <p class="insert-coin">INSERT COIN</p>
          <p class="blink">PRESS START</p>
        </div>
      </div>
    </div>
  </div>

  <div class="cabinet-controls">
    <div class="joystick"></div>
    <div class="buttons">
      <div class="btn-arcade btn-a"></div>
      <div class="btn-arcade btn-b"></div>
    </div>
  </div>

  <div class="cabinet-base">
    <p class="game-desc">{description}</p>
  </div>
</a>

<style>
  .arcade-cabinet {
    display: flex;
    flex-direction: column;
    width: 220px;
    background: linear-gradient(180deg, #2a2a2a 0%, #1a1a1a 100%);
    border-radius: 12px 12px 8px 8px;
    padding: 12px;
    text-decoration: none;
    color: var(--color-text);
    transition: all 0.3s ease;
    box-shadow:
      0 10px 30px rgba(0, 0, 0, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    position: relative;
  }

  .arcade-cabinet::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, var(--cabinet-color), transparent, var(--cabinet-color));
    border-radius: 14px 14px 10px 10px;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .arcade-cabinet:hover::before {
    opacity: 1;
  }

  .arcade-cabinet:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.6),
      0 0 60px var(--cabinet-glow),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
  }

  .arcade-cabinet:hover .screen-content {
    background: radial-gradient(circle at center, var(--cabinet-glow) 0%, #000 70%);
  }

  .arcade-cabinet:hover .blink {
    animation: blink 0.5s step-end infinite;
  }

  .arcade-cabinet:hover .screen-icon {
    animation: bounce 0.5s ease infinite;
  }

  .cabinet-top {
    margin-bottom: 8px;
  }

  .cabinet-marquee {
    background: linear-gradient(180deg, var(--cabinet-color) 0%, color-mix(in srgb, var(--cabinet-color) 70%, black) 100%);
    padding: 8px 12px;
    border-radius: 8px 8px 4px 4px;
    text-align: center;
    box-shadow:
      0 4px 15px var(--cabinet-glow),
      inset 0 -2px 4px rgba(0, 0, 0, 0.3),
      inset 0 2px 4px rgba(255, 255, 255, 0.2);
  }

  .marquee-text {
    font-family: 'Press Start 2P', var(--font-mono), monospace;
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    color: white;
    text-shadow:
      0 0 10px rgba(255, 255, 255, 0.8),
      2px 2px 0 rgba(0, 0, 0, 0.5);
    letter-spacing: 1px;
  }

  .cabinet-screen {
    padding: 8px;
    background: #0a0a0a;
    border-radius: 4px;
    margin-bottom: 8px;
  }

  .screen-bezel {
    padding: 4px;
    background: linear-gradient(135deg, #333 0%, #1a1a1a 100%);
    border-radius: 4px;
    box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .screen-content {
    position: relative;
    background: radial-gradient(circle at center, #001a00 0%, #000 70%);
    padding: 20px 15px;
    border-radius: 2px;
    min-height: 120px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    transition: background 0.3s ease;
  }

  .screen-scanlines {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.15) 0px,
      rgba(0, 0, 0, 0.15) 1px,
      transparent 1px,
      transparent 2px
    );
    pointer-events: none;
    z-index: 10;
  }

  .screen-icon {
    font-size: 2.5rem;
    margin-bottom: 8px;
    filter: drop-shadow(0 0 10px var(--cabinet-color));
    transition: transform 0.3s ease;
  }

  .screen-text {
    text-align: center;
  }

  .insert-coin {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    color: var(--cabinet-color);
    text-shadow: 0 0 5px var(--cabinet-color);
    margin-bottom: 4px;
    letter-spacing: 2px;
  }

  .blink {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: #fff;
    text-shadow: 0 0 10px #fff;
    letter-spacing: 1px;
  }

  @keyframes blink {
    50% { opacity: 0; }
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }

  .cabinet-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    padding: 12px;
    background: linear-gradient(180deg, #222 0%, #1a1a1a 100%);
    border-radius: 4px;
    margin-bottom: 8px;
  }

  .joystick {
    width: 24px;
    height: 24px;
    background: radial-gradient(circle at 30% 30%, #444, #111);
    border-radius: 50%;
    box-shadow:
      0 4px 8px rgba(0, 0, 0, 0.5),
      inset 0 -2px 4px rgba(0, 0, 0, 0.5),
      inset 0 2px 4px rgba(255, 255, 255, 0.1);
    position: relative;
  }

  .joystick::after {
    content: '';
    position: absolute;
    top: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 12px;
    height: 20px;
    background: linear-gradient(180deg, #333, #111);
    border-radius: 6px 6px 4px 4px;
    box-shadow:
      inset 0 -2px 4px rgba(0, 0, 0, 0.5),
      inset 0 2px 4px rgba(255, 255, 255, 0.1);
  }

  .buttons {
    display: flex;
    gap: 8px;
  }

  .btn-arcade {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    box-shadow:
      0 3px 6px rgba(0, 0, 0, 0.4),
      inset 0 -2px 4px rgba(0, 0, 0, 0.3),
      inset 0 2px 4px rgba(255, 255, 255, 0.2);
  }

  .btn-a {
    background: radial-gradient(circle at 30% 30%, #ff6b6b, #cc0000);
  }

  .btn-b {
    background: radial-gradient(circle at 30% 30%, #4ecdc4, #00a099);
  }

  .cabinet-base {
    text-align: center;
    padding: 8px;
  }

  .game-desc {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  @media (max-width: 600px) {
    .arcade-cabinet {
      width: 180px;
      padding: 8px;
    }

    .marquee-text {
      font-size: 0.55rem;
    }

    .screen-content {
      min-height: 100px;
      padding: 15px 10px;
    }

    .screen-icon {
      font-size: 2rem;
    }
  }
</style>
