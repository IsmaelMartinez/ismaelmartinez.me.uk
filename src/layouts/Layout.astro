---
import { languages, useTranslations, getLocalizedPath } from '../i18n/translations';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  lang?: 'en' | 'es' | 'cat';
}

const { title, description = "Ismael Martinez - Software Engineer & Open Source Enthusiast", lang = 'en' } = Astro.props;
const t = useTranslations(lang);
const currentPath = Astro.url.pathname.replace(`/${lang}`, '') || '/';
---

<!doctype html>
<html lang={lang === 'cat' ? 'ca' : lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Ismael Martinez</title>

    <!-- Umami Analytics -->
    <script defer src="https://cloud.umami.is/script.js" data-website-id="d3ef0011-73bb-46a5-a248-f5220efa13eb"></script>
  </head>
  <body>
    <nav class="nav">
      <div class="container nav-container">
        <a href={getLocalizedPath('/', lang)} class="nav-logo">IMR</a>

        <ul class="nav-links">
          <li><a href={getLocalizedPath('/', lang)}>{t('nav.home')}</a></li>
          <li><a href={getLocalizedPath('/about', lang)}>{t('nav.about')}</a></li>
          <li><a href={getLocalizedPath('/projects', lang)}>{t('nav.projects')}</a></li>
          <li><a href={getLocalizedPath('/writing', lang)}>{t('nav.writing')}</a></li>
          <li id="arcade-nav" class="arcade-nav-hidden"><a href={getLocalizedPath('/fun', lang)}>{t('nav.fun')}</a></li>
          <li><a href={getLocalizedPath('/connect', lang)}>{t('nav.connect')}</a></li>
        </ul>

        <div class="lang-switcher">
          {Object.entries(languages).map(([code, _name]) => (
            <a
              href={getLocalizedPath(currentPath, code)}
              class:list={['lang-link', { active: lang === code }]}
            >
              {code.toUpperCase()}
            </a>
          ))}
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        <p>
          {t('footer.built')} <a href="https://astro.build" target="_blank" rel="noopener">Astro</a> {t('footer.and')} ‚òï
        </p>
        <p class="footer-copy">&copy; {new Date().getFullYear()} Ismael Martinez</p>
      </div>
    </footer>

    <!-- Easter Egg: Konami Code -->
    <div id="konami-overlay" class="konami-overlay">
      <div class="konami-content">
        <div class="konami-emoji">üïπÔ∏è</div>
        <h2>SECRET ARCADE UNLOCKED!</h2>
        <p>You've discovered the hidden arcade. Game on!</p>
        <div class="konami-confetti"></div>
        <a id="konami-enter" href={getLocalizedPath('/fun', lang)} class="btn btn-arcade">Enter Arcade</a>
      </div>
    </div>

    <script>
      // Check if arcade is unlocked on page load
      function checkArcadeUnlocked() {
        const arcadeNav = document.getElementById('arcade-nav');
        if (localStorage.getItem('arcadeUnlocked') === 'true') {
          arcadeNav?.classList.remove('arcade-nav-hidden');
        }
      }
      checkArcadeUnlocked();

      // Konami Code: ‚Üë ‚Üë ‚Üì ‚Üì ‚Üê ‚Üí ‚Üê ‚Üí B A
      const konamiCode = ['ArrowUp', 'ArrowUp', 'ArrowDown', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'ArrowLeft', 'ArrowRight', 'KeyB', 'KeyA'];
      let konamiIndex = 0;

      document.addEventListener('keydown', (e) => {
        if (e.code === konamiCode[konamiIndex]) {
          konamiIndex++;
          if (konamiIndex === konamiCode.length) {
            activateKonami();
            konamiIndex = 0;
          }
        } else {
          konamiIndex = 0;
        }
      });

      function activateKonami() {
        // Unlock the arcade
        localStorage.setItem('arcadeUnlocked', 'true');
        const arcadeNav = document.getElementById('arcade-nav');
        arcadeNav?.classList.remove('arcade-nav-hidden');

        // Show celebration overlay
        const overlay = document.getElementById('konami-overlay');
        overlay?.classList.add('active');
        createConfetti();
      }

      function createConfetti() {
        const confettiContainer = document.querySelector('.konami-confetti');
        if (!confettiContainer) return;

        confettiContainer.innerHTML = '';
        const colors = ['#ff6b6b', '#4ecdc4', '#45b7d1', '#96ceb4', '#ffeaa7', '#dfe6e9', '#fd79a8', '#a29bfe'];

        for (let i = 0; i < 100; i++) {
          const confetti = document.createElement('div');
          confetti.className = 'confetti-piece';
          confetti.style.cssText = `
            left: ${Math.random() * 100}%;
            background: ${colors[Math.floor(Math.random() * colors.length)]};
            animation-delay: ${Math.random() * 2}s;
            animation-duration: ${2 + Math.random() * 2}s;
          `;
          confettiContainer.appendChild(confetti);
        }
      }

      // Easter egg: Click the logo 5 times
      let logoClicks = 0;
      document.querySelector('.nav-logo')?.addEventListener('click', (e) => {
        logoClicks++;
        if (logoClicks >= 5) {
          e.preventDefault();
          const logo = e.target as HTMLElement;
          logo.style.animation = 'spin 0.5s ease';
          setTimeout(() => {
            logo.style.animation = '';
          }, 500);
          logoClicks = 0;
        }
      });
    </script>
  </body>
</html>

<style>
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--color-bg);
    border-bottom: 1px solid var(--color-border);
    height: var(--nav-height);
  }

  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
  }

  .nav-logo {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: var(--space-xl);
  }

  .nav-links a {
    color: var(--color-text-muted);
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--color-text);
  }

  .arcade-nav-hidden {
    display: none;
  }

  .lang-switcher {
    display: flex;
    gap: var(--space-sm);
  }

  .lang-link {
    padding: var(--space-xs) var(--space-sm);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text-muted);
    border-radius: 0.25rem;
    transition: all 0.2s ease;
  }

  .lang-link:hover,
  .lang-link.active {
    color: var(--color-accent);
    background: var(--color-bg-secondary);
  }

  .footer {
    border-top: 1px solid var(--color-border);
    padding: var(--space-xl) 0;
    text-align: center;
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .footer-copy {
    margin-top: var(--space-sm);
    font-size: 0.75rem;
  }

  @media (max-width: 768px) {
    .nav-links {
      gap: var(--space-md);
      font-size: 0.875rem;
    }
  }

  @media (max-width: 600px) {
    .nav-container {
      flex-wrap: wrap;
      padding: var(--space-sm) var(--space-lg);
      height: auto;
    }

    .nav-links {
      order: 3;
      width: 100%;
      justify-content: center;
      padding: var(--space-sm) 0;
    }
  }

  /* Konami Code Easter Egg */
  .konami-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .konami-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .konami-content {
    text-align: center;
    z-index: 1;
  }

  .konami-emoji {
    font-size: 8rem;
    animation: bounce 1s ease infinite;
  }

  .konami-content h2 {
    font-size: 2.5rem;
    margin: var(--space-lg) 0 var(--space-md);
    background: linear-gradient(90deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .konami-content p {
    color: var(--color-text-muted);
    margin-bottom: var(--space-xl);
    font-size: 1.25rem;
  }

  .konami-confetti {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    overflow: hidden;
  }

  :global(.confetti-piece) {
    position: absolute;
    top: -20px;
    width: 10px;
    height: 10px;
    border-radius: 2px;
    animation: confetti-fall linear forwards;
  }

  @keyframes confetti-fall {
    0% {
      transform: translateY(0) rotate(0deg);
      opacity: 1;
    }
    100% {
      transform: translateY(100vh) rotate(720deg);
      opacity: 0;
    }
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .btn-arcade {
    display: inline-block;
    padding: var(--space-md) var(--space-xl);
    font-family: var(--font-mono);
    font-weight: 700;
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #0ff;
    background: transparent;
    border: 2px solid #0ff;
    border-radius: 0.25rem;
    cursor: pointer;
    text-decoration: none;
    animation: neon-pulse 1.5s ease-in-out infinite;
  }

  .btn-arcade:hover {
    background: #0ff;
    color: #000;
    box-shadow: 0 0 20px #0ff, 0 0 40px #0ff;
  }

  @keyframes neon-pulse {
    0%, 100% { box-shadow: 0 0 5px #0ff, 0 0 10px #0ff; }
    50% { box-shadow: 0 0 15px #0ff, 0 0 30px #0ff; }
  }
</style>
