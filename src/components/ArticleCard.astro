---
import { getLocalizedPath } from '../i18n/translations';

interface Props {
  title: string;
  description: string;
  publishedDate: Date;
  slug: string;
  tags: string[];
  lang: 'en' | 'es' | 'cat';
  originalPlatform?: 'medium' | 'devto' | 'self';
}

const { title, description, publishedDate, slug, tags, lang, originalPlatform } = Astro.props;

const formatDate = (date: Date) => {
  return date.toLocaleDateString(lang === 'cat' ? 'ca-ES' : lang === 'es' ? 'es-ES' : 'en-GB', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
};

const platformIcon = {
  medium: '‚úçÔ∏è',
  devto: 'üë©‚Äçüíª',
  self: 'üè†'
};
---

<article class="article-card">
  <a href={getLocalizedPath(`/articles/${slug}`, lang)} class="article-link">
    <div class="article-card-header">
      <time datetime={publishedDate.toISOString()}>{formatDate(publishedDate)}</time>
      {originalPlatform && (
        <span class="platform-badge" title={originalPlatform}>
          {platformIcon[originalPlatform]}
        </span>
      )}
    </div>

    <h3 class="article-card-title">{title}</h3>
    <p class="article-card-description">{description}</p>
  </a>

  {tags.length > 0 && (
    <div class="article-card-tags">
      {tags.slice(0, 3).map(tag => (
        <a href={getLocalizedPath(`/tags/${tag}`, lang)} class="tag tag-small tag-link">{tag}</a>
      ))}
      {tags.length > 3 && (
        <span class="tag tag-small tag-more">+{tags.length - 3}</span>
      )}
    </div>
  )}
</article>

<style>
  .article-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    transition: border-color 0.2s ease;
  }

  .article-card:hover {
    border-color: var(--color-accent);
  }

  .article-link {
    display: block;
    padding: var(--space-lg);
    padding-bottom: var(--space-sm);
    text-decoration: none;
    color: inherit;
  }

  .article-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-sm);
  }

  .article-card-header time {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .platform-badge {
    font-size: 1rem;
  }

  .article-card-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--space-sm);
    line-height: 1.3;
  }

  .article-card:hover .article-card-title {
    color: var(--color-accent);
  }

  .article-card-description {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin-bottom: var(--space-md);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .article-card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    padding: 0 var(--space-lg) var(--space-lg);
  }

  .tag-small {
    font-size: 0.7rem;
    padding: 0.125rem 0.5rem;
  }

  .tag-more {
    background: transparent;
    border: 1px dashed var(--color-border);
  }

  .tag-link {
    text-decoration: none;
    position: relative;
    z-index: 1;
    transition: border-color 0.2s ease, color 0.2s ease;
  }

  .tag-link:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }
</style>
