---
import Layout from '../../../layouts/Layout.astro';
import ArcadeCabinet from '../../../components/ArcadeCabinet.astro';
import { useTranslations, getLocalizedPath } from '../../../i18n/translations';

const lang = 'es';
const t = useTranslations(lang);

const arcadeGames = [
  {
    id: 'quiz',
    title: 'QUIZ DEV',
    description: '¬øQu√© tipo de dev eres?',
    icon: 'üß†',
    color: '#8b5cf6',
    path: '/fun/quiz'
  },
  {
    id: 'snake',
    title: 'SNAKE',
    description: '¬°Acci√≥n retro cl√°sica!',
    icon: 'üêç',
    color: '#22c55e',
    path: '/fun/snake'
  }
];
---

<Layout title="El Arcade" lang={lang}>
  <div class="arcade-room">
    <div class="neon-grid"></div>

    <div class="arcade-header">
      <div class="neon-sign">
        <span class="neon-text">ARCADE DE</span>
        <span class="neon-text accent">ISMAEL</span>
      </div>
      <p class="arcade-subtitle">Inserta moneda para jugar</p>
    </div>

    <div class="arcade-floor">
      <div class="cabinets-row">
        {arcadeGames.map(game => (
          <ArcadeCabinet
            id={game.id}
            title={game.title}
            description={game.description}
            icon={game.icon}
            color={game.color}
            href={getLocalizedPath(game.path, lang)}
          />
        ))}
      </div>
    </div>

    <div class="arcade-decorations">
      <div class="floor-reflection"></div>
    </div>

    <div class="arcade-tip">
      <p>Consejo: Prueba el C√≥digo Konami en cualquier parte del sitio...</p>
    </div>
  </div>
</Layout>

<style>
  .arcade-room {
    min-height: calc(100vh - var(--nav-height));
    background: linear-gradient(180deg, #0a0a12 0%, #1a1a2e 50%, #16213e 100%);
    position: relative;
    overflow: hidden;
    padding: var(--space-2xl) var(--space-lg);
  }

  .neon-grid {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      linear-gradient(rgba(139, 92, 246, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(139, 92, 246, 0.03) 1px, transparent 1px);
    background-size: 50px 50px;
    animation: gridMove 20s linear infinite;
  }

  @keyframes gridMove {
    0% { background-position: 0 0; }
    100% { background-position: 50px 50px; }
  }

  .arcade-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
    position: relative;
    z-index: 10;
  }

  .neon-sign {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xs);
    margin-bottom: var(--space-md);
  }

  .neon-text {
    font-family: var(--font-mono);
    font-size: clamp(2rem, 8vw, 4rem);
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #fff;
    text-shadow:
      0 0 5px #fff,
      0 0 10px #fff,
      0 0 20px #ff00de,
      0 0 40px #ff00de,
      0 0 80px #ff00de;
    animation: neonFlicker 3s ease-in-out infinite;
  }

  .neon-text.accent {
    color: #0ff;
    text-shadow:
      0 0 5px #0ff,
      0 0 10px #0ff,
      0 0 20px #0ff,
      0 0 40px #00b7ff,
      0 0 80px #00b7ff;
    animation: neonFlicker 2.5s ease-in-out infinite reverse;
  }

  @keyframes neonFlicker {
    0%, 19%, 21%, 23%, 25%, 54%, 56%, 100% { opacity: 1; }
    20%, 24%, 55% { opacity: 0.8; }
  }

  .arcade-subtitle {
    font-family: var(--font-mono);
    font-size: 1rem;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    animation: blink 1.5s step-end infinite;
  }

  @keyframes blink { 50% { opacity: 0.5; } }

  .arcade-floor {
    position: relative;
    z-index: 10;
    max-width: 1200px;
    margin: 0 auto;
  }

  .cabinets-row {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--space-2xl);
    padding: var(--space-xl) 0;
  }

  .arcade-decorations {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 150px;
    pointer-events: none;
  }

  .floor-reflection {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100px;
    background: linear-gradient(180deg, transparent 0%, rgba(139, 92, 246, 0.05) 100%);
  }

  .arcade-tip {
    text-align: center;
    margin-top: var(--space-3xl);
    position: relative;
    z-index: 10;
  }

  .arcade-tip p {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  @media (max-width: 768px) {
    .arcade-room { padding: var(--space-xl) var(--space-md); }
    .cabinets-row { gap: var(--space-xl); }
  }

  @media (max-width: 480px) {
    .neon-text { letter-spacing: 0.1em; }
    .cabinets-row { gap: var(--space-lg); }
  }
</style>
